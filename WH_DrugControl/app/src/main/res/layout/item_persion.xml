<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dip"
    android:background="@drawable/my_item_bg"
    android:paddingBottom="5dip"
    android:paddingTop="5dip">

    <ImageView
        android:id="@+id/persion_img"
        android:layout_width="70dip"
        android:layout_height="85dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:background="@drawable/default_image"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6.5dip"
        android:layout_marginRight="6.5dip"
        android:layout_toRightOf="@+id/persion_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/persion_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/persion_sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/item_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:textColor="@color/item_text_color"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/source_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3.5dip"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pre_source_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pre_source_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/item_input_color"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/syjf"
                    android:textColor="@color/item_input_color"
                    android:textSize="10.6sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/now_source_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.3dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/now_source_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/prvs"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/now_source_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="6.6dip"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/byjf"
                    android:textColor="@color/prvs"
                    android:textSize="10.6sp"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/collect_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/collect_normal"/>

    </RelativeLayout>

</RelativeLayout>