<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/notice_bg">

        <ImageView
            android:id="@+id/content_iv"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.3dip"
            android:background="@drawable/default_msg"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@+id/content_iv">

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/login_title_color"
                android:textSize="18sp"
                tools:text="子条目标题"/>

            <TextView
                android:id="@+id/content_key_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content_tv"
                android:layout_marginTop="20dip"
                android:layout_toLeftOf="@+id/content_time_tv"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/hui"
                android:textSize="16sp"
                tools:text="子条目关键字"/>

            <TextView
                android:id="@+id/content_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/content_tv"
                android:layout_marginTop="20dip"
                android:textColor="@color/hui"
                android:textSize="16sp"
                tools:text="2017-09-12"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>