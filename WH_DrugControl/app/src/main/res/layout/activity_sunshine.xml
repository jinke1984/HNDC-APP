<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/food_bg"
    android:orientation="vertical" >
    
    <include 
        android:id="@+id/sunshine_top"
        layout="@layout/qiandw_system_header_include"/>
    
    <ListView 
        android:id="@+id/sun_shine_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:layout_below="@+id/sunshine_top"
        android:dividerHeight="6.6dp"/>
    
   <ImageView
        android:id="@+id/default_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_data"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"/>

</RelativeLayout>
