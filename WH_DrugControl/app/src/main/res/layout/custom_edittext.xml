<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip">

    <RelativeLayout
        android:id="@+id/custom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/custom_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:textColor="@color/new_notice_color"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/custom_et"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:background="@null"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/custom_tv"
            android:layout_toLeftOf="@+id/custom_iv"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/custom_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_line"
        android:layout_below="@+id/custom_layout"/>

</RelativeLayout>