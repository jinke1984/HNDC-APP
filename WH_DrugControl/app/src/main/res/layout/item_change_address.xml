<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="30dip"
    android:paddingTop="15dip"
    android:paddingBottom="15dip"
    android:background="@drawable/my_item_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/now_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.3dip"
        android:textColor="@color/item_input_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/change_address_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.3dip"
        android:layout_marginTop="6.6dip"
        android:textColor="@color/item_input_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/change_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.3dip"
        android:layout_marginTop="6.6dip"
        android:textColor="@color/item_input_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/change_reason_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.3dip"
        android:layout_marginTop="6.6dip"
        android:textColor="@color/item_input_color"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/leave_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.3dip"
        android:layout_marginTop="6.6dip"
        android:textColor="@color/item_input_color"
        android:textSize="14sp"/>

</LinearLayout>