<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/qiandw_system_header_include"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dip"
        android:layout_marginLeft="13.3dip"
        android:layout_marginRight="13.3dip"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sfsymm"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <ToggleButton
            android:id="@+id/switch_pwd_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/selector_toggle_gesture"
            android:button="@null"
            android:textOff=""
            android:textOn=""
            tools:checked="true"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13.3dip"
        android:layout_marginRight="13.3dip"
        android:background="#e9e9e9"/>

    <TextView
        android:id="@+id/switch_pwd_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6.6dip"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <FrameLayout
        android:id="@+id/switch_pwd_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>