<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="13.5dp"
        android:layout_marginTop="13.5dp"
        android:background="@drawable/message_date_bg"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible"
        android:paddingTop="3dp"
        android:text="5月6日"
        tools:text="5月6日"/>

    <LinearLayout
        android:id="@+id/layout_message_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/common_item_shape"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <!-- 第一条消息 -->

        <RelativeLayout
            android:id="@+id/layout_first_message"
            android:layout_width="match_parent"
            android:layout_height="142.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/first_msg_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/common_picture_default"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/half_transparent"/>

            <TextView
                android:id="@+id/first_msg_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:paddingLeft="12.5dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="帮扶消息标题帮扶消息标题帮扶消息标题帮扶消息标题..."/>

        </RelativeLayout>

        <!-- 第二条消息 -->
        <LinearLayout
            android:id="@+id/layout_second_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/second_msg_img"
                    android:layout_width="61.5dp"
                    android:layout_height="61.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo"/>

                <TextView
                    android:id="@+id/second_msg_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.5dp"
                    android:text="帮扶消息标题帮扶消息标题帮扶消息标题帮扶消息标题..."
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 第三条消息 -->
        <LinearLayout
            android:id="@+id/layout_third_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/third_msg_img"
                    android:layout_width="61.5dp"
                    android:layout_height="61.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo"/>

                <TextView
                    android:id="@+id/third_msg_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.5dp"
                    android:text="帮扶消息标题帮扶消息标题帮扶消息标题帮扶消息标题..."
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>