<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <SurfaceView
            android:id="@+id/act_camera_surface_view"
            android:layout_width="fill_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="fill_parent"/>
    
    <RelativeLayout
            android:id="@+id/act_camera_auto_focus_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/act_camera_auto_focus_image"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name"
                android:src="@drawable/camera_img_auto_focus" />
        </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >


            <ImageView
                android:id="@+id/act_camera_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="18dp"
                android:contentDescription="@string/app_name"
                android:background="@drawable/camera_btn_bg_selector_back" />
            
            <ImageButton
                android:id="@+id/act_camera_btn_switch_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="18dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/camera_btn_bg_change_camera_normal" />

        <ImageView
                android:id="@+id/act_camera_btn_take_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"
                android:src="@drawable/camera_btn_bg_selector_take_picture" />

    </RelativeLayout>
    
    <ProgressBar
        android:id="@+id/act_camera_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>