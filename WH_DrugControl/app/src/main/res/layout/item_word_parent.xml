<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingTop="15dip"
    android:paddingBottom="15dip" android:background="@drawable/my_item_bg">
    <TextView
        android:id="@+id/word_parent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.3dip"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/blue_point"
        android:drawablePadding="13.3dip"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13.3dip"
        android:background="@drawable/more"/>
</RelativeLayout>