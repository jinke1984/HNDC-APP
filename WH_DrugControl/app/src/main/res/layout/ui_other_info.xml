<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/_top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip">

            <TextView
                android:id="@+id/_top_label_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/blue_point"
                android:drawablePadding="6dip"
                android:drawableRight="@drawable/blue_point"
                android:text="@string/zpxx"
                android:textColor="@color/home_top_color"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.3dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="5.3dip"
                android:layout_toLeftOf="@+id/_top_label_txt"
                android:background="@color/home_top_color"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1.3dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.3dip"
                android:layout_toRightOf="@+id/_top_label_txt"
                android:background="@color/home_top_color"/>
        </RelativeLayout>

        <cn.com.jinke.wh_drugcontrol.customview.CustomEditText
            android:id="@+id/wgy_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dip"
            android:layout_marginRight="13.3dip"
            android:layout_marginTop="10dip"
            customet:custom_tv="@string/wgy"/>

        <cn.com.jinke.wh_drugcontrol.customview.CustomEditText
            android:id="@+id/sqmj_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dip"
            android:layout_marginRight="13.3dip"
            customet:custom_tv="@string/sqmj"/>

        <ImageView
            android:id="@+id/photo_img"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/default_image"/>

        <Button
            android:id="@+id/upload_photo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/selector_upload_btn"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="@string/uploadxdryzp"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13.3dip">

            <Button
                android:id="@+id/pre_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:text="@string/syb"
                android:textColor="#ffffff"
                android:textSize="16sp"/>

            <android.support.v4.widget.Space
                android:layout_width="13.3dip"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/next_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/login_button"
                android:text="@string/save"
                android:textColor="#ffffff"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
