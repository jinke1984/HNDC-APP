<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/food_bg"
    android:orientation="vertical" >
    
    <include 
        android:id="@+id/accept_medication_top"
        layout="@layout/qiandw_system_header_include"/>
    
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/accept_medication_xlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/accept_medication_top"
        android:background="@null"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#c9c9c9"
        android:dividerHeight="0.5dp"
        android:fadingEdge="none"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="0dp"
        app:ptrAnimationStyle="flip"
        app:ptrDrawable="@drawable/indicator_arrow"
        app:ptrMode="pullFromStart"
        app:ptrShowIndicator="false" 
        app:ptrOverScroll="false"/>
    
   <ImageView
        android:id="@+id/default_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_data"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"/>

</RelativeLayout>
