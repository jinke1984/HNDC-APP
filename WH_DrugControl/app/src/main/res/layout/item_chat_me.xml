<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/food_bg"
    android:orientation="vertical" >
    

    <LinearLayout
        android:id="@+id/head_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="6.6dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/head_zg"
        android:background="@drawable/qqqq"
        android:orientation="horizontal" >
    
        <!-- <ProgressBar 
            android:id="@+id/chat_pb"
            android:layout_width="10dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_height="10dp"/> -->
            <TextView 
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:gravity="center"/>
        
        <ImageView 
            android:id="@+id/chat_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            android:layout_marginTop ="7dp"
            android:layout_marginBottom="7dp"
            android:scaleType="center"
            android:background="@drawable/message_voice"/>
        
        <ImageView 
            android:id="@+id/chat_img_ic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            android:layout_marginTop ="7dp"
            android:layout_marginBottom="7dp"
            android:scaleType="centerCrop"
            android:background="@drawable/message_default_img"/>
        
    <TextView 
        android:id="@+id/me_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="6.6dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center|left"
        android:textSize="16sp"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:gravity="center"/>

    </LinearLayout>
    
    <ImageView 
        android:id="@+id/head_zg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6.6dp"
        android:background="@drawable/common_legal_male_avatar"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name"/>
    
</RelativeLayout>
